                    android:padding="@dimen/padding_8dp"
                    android:text="@string/_45"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_30sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
