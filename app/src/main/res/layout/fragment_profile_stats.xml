<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="org.wikiedufoundation.wikiedudashboard.ui.profile.view.ProfileStatsFragment">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_by_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/margin_16dp">

            <TextView
                android:id="@+id/tv_title_impact_by_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_16dp"
                android:layout_marginTop="@dimen/padding_16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_instructor_count_words_added"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_8dp"
                        android:text="@string/_45"
                        android:layout_marginLeft="@dimen/margin_48dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_impact_by_student"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="@id/tv_instructor_count_words_added"
                        app:layout_constraintLeft_toLeftOf="@id/tv_instructor_count_words_added"
                        app:layout_constraintTop_toBottomOf="@id/tv_instructor_count_words_added"
                        android:padding="@dimen/padding_8dp"
                        android:text="@string/words_added" />

                    <TextView
                        android:id="@+id/tv_instructor_count_references_added"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_8dp"
                        android:text="@string/_45"
                        app:layout_constraintTop_toTopOf="@id/tv_instructor_count_words_added"
                        app:layout_constraintBottom_toBottomOf="@id/tv_instructor_count_words_added"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginRight="@dimen/margin_48dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="@id/tv_instructor_count_references_added"
                        app:layout_constraintLeft_toLeftOf="@id/tv_instructor_count_references_added"
                        android:padding="@dimen/padding_8dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_instructor_count_references_added"
                        android:text="@string/references_added" />


                    <TextView
                        android:id="@+id/tv_instructor_count_article_views"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="@id/tv_instructor_count_words_added"
                        android:layout_marginTop="@dimen/margin_48dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_instructor_count_words_added"
                        android:padding="@dimen/padding_8dp"
                        android:text="@string/_45"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="@id/tv_instructor_count_article_views"
                        app:layout_constraintLeft_toLeftOf="@id/tv_instructor_count_article_views"
                        android:padding="@dimen/padding_8dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_instructor_count_article_views"
                        android:text="@string/article_views" />

                    <TextView
                        android:id="@+id/tv_instructor_count_articles_edited"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="@id/tv_instructor_count_references_added"
                        app:layout_constraintRight_toRightOf="@id/tv_instructor_count_references_added"
                        android:padding="@dimen/padding_8dp"
                        android:text="@string/_45"
                        app:layout_constraintTop_toTopOf="@id/tv_instructor_count_article_views"
                        app:layout_constraintBottom_toBottomOf="@id/tv_instructor_count_article_views"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="@id/tv_instructor_count_articles_edited"
                        app:layout_constraintTop_toBottomOf="@id/tv_instructor_count_articles_edited"
                        android:padding="@dimen/padding_8dp"
                        app:layout_constraintLeft_toLeftOf="@id/tv_instructor_count_articles_edited"
                        android:text="@string/articles_edited" />

                    <TextView
                        android:id="@+id/tv_instructor_count_articles_created"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_8dp"
                        android:text="@string/_45"
                        android:layout_marginTop="@dimen/margin_48dp"
                        app:layout_constraintLeft_toLeftOf="@id/tv_instructor_count_article_views"
                        app:layout_constraintTop_toBottomOf="@id/tv_instructor_count_article_views"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_8dp"
                        app:layout_constraintRight_toRightOf="@id/tv_instructor_count_articles_created"
                        app:layout_constraintLeft_toLeftOf="@id/tv_instructor_count_articles_created"
                        app:layout_constraintTop_toBottomOf="@id/tv_instructor_count_articles_created"
                        android:text="@string/articles_created" />

                    <TextView
                        android:id="@+id/tv_instructor_count_commons_upload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_instructor_count_articles_edited"
                        app:layout_constraintRight_toRightOf="@id/tv_instructor_count_articles_edited"
                        app:layout_constraintLeft_toLeftOf="@id/tv_instructor_count_articles_edited"
                        android:padding="@dimen/padding_8dp"
                        android:text="@string/_45"
                        android:layout_marginTop="@dimen/margin_48dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_8dp"
                        app:layout_constraintLeft_toLeftOf="@id/tv_instructor_count_commons_upload"
                        app:layout_constraintRight_toRightOf="@id/tv_instructor_count_commons_upload"
                        app:layout_constraintTop_toBottomOf="@id/tv_instructor_count_commons_upload"
                        android:text="@string/commons_upload" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_as_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16dp"
            app:layout_constraintTop_toBottomOf="@id/cl_by_student">

            <TextView
                android:id="@+id/tv_title_impact_as_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_16dp"
                android:layout_marginTop="@dimen/padding_16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@color/colorAccent"
                app:layout_constraintTop_toTopOf="parent"
                android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_count_articles_created"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_8dp"
                        android:text="@string/_45"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginStart="@dimen/margin_48dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_impact_as_student"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="@id/tv_count_articles_created"
                        app:layout_constraintLeft_toLeftOf="@id/tv_count_articles_created"
                        app:layout_constraintTop_toBottomOf="@id/tv_count_articles_created"
                        android:padding="@dimen/padding_8dp"
                        android:text="@string/articles_created" />

                    <TextView
                        android:id="@+id/tv_count_articles_edited"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_8dp"
                        android:text="@string/_45"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginRight="@dimen/margin_48dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_impact_as_student"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="@id/tv_count_articles_edited"
                        app:layout_constraintLeft_toLeftOf="@id/tv_count_articles_edited"
                        app:layout_constraintTop_toBottomOf="@id/tv_count_articles_edited"
                        android:padding="@dimen/padding_8dp"
                        android:text="@string/articles_edited" />

                    <TextView
                        android:id="@+id/tv_count_total_edits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_8dp"
                        android:text="@string/_45"
                        app:layout_constraintTop_toBottomOf="@id/tv_count_articles_created"
                        android:layout_marginTop="@dimen/margin_48dp"
                        app:layout_constraintRight_toRightOf="@id/tv_count_articles_created"
                        app:layout_constraintLeft_toLeftOf="@id/tv_count_articles_created"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="@id/tv_count_total_edits"
                        app:layout_constraintLeft_toLeftOf="@id/tv_count_total_edits"
                        app:layout_constraintTop_toBottomOf="@id/tv_count_total_edits"
                        android:padding="@dimen/padding_8dp"
                        android:text="Total Edits" />

                    <TextView
                        android:id="@+id/tv_count_student_editors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="@id/tv_count_articles_edited"
                        app:layout_constraintLeft_toLeftOf="@id/tv_count_articles_edited"
                        android:layout_marginTop="@dimen/margin_48dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_count_articles_edited"
                        android:padding="@dimen/padding_8dp"
                        android:text="@string/_45"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="@id/tv_count_student_editors"
                        app:layout_constraintLeft_toLeftOf="@id/tv_count_student_editors"
                        app:layout_constraintTop_toBottomOf="@id/tv_count_student_editors"
                        android:padding="@dimen/padding_8dp"
                        android:text="@string/student_editors" />

                    <TextView
                        android:id="@+id/tv_count_words_added"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_8dp"
                        android:text="@string/_45"
                        app:layout_constraintRight_toRightOf="@id/tv_count_total_edits"
                        app:layout_constraintLeft_toLeftOf="@id/tv_count_total_edits"
                        android:layout_marginTop="@dimen/margin_48dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_count_total_edits"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="@id/tv_count_words_added"
                        app:layout_constraintTop_toBottomOf="@id/tv_count_words_added"
                        app:layout_constraintRight_toRightOf="@id/tv_count_words_added"
                        android:padding="@dimen/padding_8dp"
                        android:text="@string/words_added" />

                    <TextView
                        android:id="@+id/tv_count_article_views"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="@id/tv_count_student_editors"
                        app:layout_constraintRight_toRightOf="@id/tv_count_student_editors"
                        app:layout_constraintTop_toBottomOf="@id/tv_count_student_editors"
                        android:layout_marginTop="@dimen/margin_48dp"
                        android:padding="@dimen/padding_8dp"
                        android:text="@string/_45"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="@id/tv_count_article_views"
                        app:layout_constraintRight_toRightOf="@id/tv_count_article_views"
                        app:layout_constraintTop_toBottomOf="@id/tv_count_article_views"
                        android:padding="@dimen/padding_8dp"
                        android:text="@string/article_views" />

                    <TextView
                        android:id="@+id/tv_count_commons_uploads"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_8dp"
                        android:text="@string/_45"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_count_words_added"
                        android:layout_marginTop="@dimen/margin_48dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_30sp" />

                    <TextView
                        android:id="@+id/common_uploads"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_count_commons_uploads"
                        android:padding="@dimen/padding_8dp"
                        android:text="@string/commons_upload" />

            <TextView
                android:id="@+id/tv_not_enrolled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size_20sp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/common_uploads"
                android:text="@string/not_enrolled" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>