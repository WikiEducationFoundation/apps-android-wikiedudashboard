<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome4_background"
    android:gravity="center">

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_16dp"

        android:gravity="center"
        app:cardCornerRadius="@dimen/card_corner_radius_8dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_outreachy_programs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/outreach_logo" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_outreachy_programs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_16dp"
        android:gravity="center"
        android:lines="2"
        android:text="@string/outreach_programs_and_events_dashboard"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_30sp"
        app:layout_constraintBottom_toTopOf="@id/cv_login_wikipedia"
        app:layout_constraintEnd_toEndOf="@+id/cv_image"
        app:layout_constraintStart_toStartOf="@id/cv_image" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_login_wikipedia"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding_16dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="@dimen/card_corner_radius_4dp"
        app:layout_constraintBottom_toTopOf="@id/cv_signup_wikipedia"
        app:layout_constraintEnd_toEndOf="@id/tv_outreachy_programs"
        app:layout_constraintStart_toStartOf="@id/tv_outreachy_programs">


        <ImageView
            android:layout_width="@dimen/icon_size_24dp"
            android:layout_height="@dimen/icon_size_24dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="108dp"
            android:backgroundTint="@color/colorAccent"
            android:src="@drawable/wikipedia_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/padding_8dp"
            android:paddingTop="@dimen/padding_8dp"
            android:paddingBottom="@dimen/padding_8dp"
            android:text="@string/log_in_with_wikipedia"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_16sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_signup_wikipedia"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="@dimen/card_corner_radius_4dp"
        app:layout_constraintEnd_toEndOf="@id/cv_login_wikipedia"
        app:layout_constraintStart_toStartOf="@id/cv_login_wikipedia"
        app:layout_constraintTop_toTopOf="@id/guide_line">

        <ImageView
            android:layout_width="@dimen/icon_size_24dp"
            android:layout_height="@dimen/icon_size_24dp"
            android:layout_marginStart="@dimen/padding_8dp"
            android:layout_marginTop="@dimen/padding_8dp"
            android:layout_marginEnd="100dp"
            android:backgroundTint="@color/colorAccent"
            android:src="@drawable/wikipedia_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:paddingTop="@dimen/padding_8dp"
            android:paddingBottom="@dimen/padding_8dp"
            android:text="@string/sign_up_with_wikipedia"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_16sp" />


    </androidx.cardview.widget.CardView>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <!--<android.support.v7.widget.CardView-->
    <!--android:layout_margin="@dimen/padding_16dp"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_gravity="center"-->
    <!--app:cardCornerRadius="@dimen/card_corner_radius_4dp"-->
    <!--android:layout_height="wrap_content">-->
